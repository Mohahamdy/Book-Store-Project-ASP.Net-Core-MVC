                        </div><!-- End .heading-right -->
                    </div><!-- End .header-flex -->

                    <div class="owl-carousel carousel-equal-height owl-simple" data-toggle="owl"
                         data-owl-options='{
                                    "nav": false,
                                    "dots": true,
                                    "margin": 20,
                                    "loop": false,
                                    "responsive": {
                                        "0": {
                                            "items":2
                                        },
                                        "480": {
                                            "items":2
                                        },
                                        "768": {
                                            "items":3
                                        },
                                        "992": {
                                            "items":4
                                        },
                                        "1440": {
                                            "items":5
                                        }
                                    }
                                }'>

                        @foreach(var item in Model)
                        {
                            @if(item.Rate >= 4)
                            {
                                <div class="product">
                                    @if (item.Quantity > 0)
                                    {

                                        <span class="product-label label-sale">Sale</span>
                                    }
                                    else{
                                        <span class="product-label label-sale" style="background-color:red;">Out of Stock</span>

                                        
                                        }
                                        <figure class="product-media">
                                        <a href="Home/bookdetails/@item.ID">
                                            <img src="~/images/shop/@item.Image" style="height:340px" alt="Product image" class="product-image">
                                        </a>
                                    </figure><!-- End .product-media -->

                                    <div class="product-body">
                                        <div class="product-cat">
                                            by <a href="#">@item.Author</a>
                                        </div><!-- End .product-cat -->
                                        <h3 class="product-title"><a href="product.html">@item.Name</a></h3><!-- End .product-title -->
                                        <div class="product-price">
                                            @if(item.Discount>0 || item.Discount !=null){

                                                <span class="new-price">$@(item.Price - ((item.Price * item.Discount) / 100))</span>

                                                <span class="old-price">Was $@item.Price.ToString("F2")</span>

                                            }
                                            else
                                            {
                                               
                                            <span class="new-price">$@item.Price.ToString("F2")</span>
                                            }
                                        </div><!-- End .product-price -->

                                        <div class="product-footer">
                                            <div class="ratings-container">
                                                <div class="ratings">
                                                    <div class="ratings-val" style="width: (@item.Rate*10)%;"></div><!-- End .ratings-val -->
                                                </div><!-- End .ratings -->
                                                
                                            </div><!-- End .rating-container -->
                                            <div class="product-action">
                                                <a href="#" class="btn-product btn-cart"><span>add to cart</span></a>
                                                <a href="#" class="btn-product btn-wishlist"><span>Add to Wishlist</span></a>
                                            </div><!-- End .product-action -->
                                        </div><!-- End .product-footer -->
                                    </div><!-- End .product-body -->
                                </div>

                                <!-- End .product -->
                            }
                        } 
                    </div><!-- End .owl-carousel -->
                </div><!-- End .container -->
            </div><!-- End .block-wrapper -->
        </div><!-- End .block -->
