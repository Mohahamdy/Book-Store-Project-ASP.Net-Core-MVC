
@{
    ViewData["Title"] = "RegistrationSuccessful";
}





<div class="container-fluid">
    <div class="row justify-content-center align-items-center g-2 mt-5">
        <div class="col-md-4">
            <img width="450" height="450" src="~/images/check.png" />
        </div>
        <div class="col-md-6">
            <h3 style="padding:10px">
                Registration Successful
            </h3>
            <h5 style="padding:20px">
                Before you can Login, please confirm your email, by clicking on the confirmation link we have emailed you.
            </h5>
            <a class="btn btn-primary" asp-controller="Account"
               asp-action="ResendConfirmationEmail" style="width:300px;height:40px;margin-left:20px;">Resend Confirmation Email</a>



        </div>
        <div class="col-md-2"></div>
    </div>
</div>
